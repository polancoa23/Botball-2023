int sideSense = 2;
int poleSense = 3;
int close = 150;
int bigOpen = 1000;
int open = 770;
int lilOpen = 450;
int left = 420;
int right = 1490;
int middle = 950;
int midLeft = 500;
int midRight = 1250;
int gray = 2750; 
int black = 3300;
int black1 = 4000;
int white = 2000;
int white1 = 3950;
int count = 0;
int pomSense = 0;
int pom = 2650;
int lspeed = 1000;
float sweepTimeR = 0.3;
float sweepTimeL = 0.3;
int firstRing = -1050;
int secondRing = -938;
int thirdRing = -852;
int halfRing = -510;
int regPos = 0;
//FUNCTIONS
void drive(int distance, int speed);
void drive_on(int distance, int speed);
void drive_on_side(int distance, int speed);
void drive_off(int distance, int speed);
void drive_off_side(int distance, int speed);
